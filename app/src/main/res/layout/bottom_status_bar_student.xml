<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#aa000000" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_bsbs_signin"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="50dp"
                android:gravity="center"
                android:src="@drawable/ic_baseline_create_24" />

            <TextView
                android:id="@+id/tv_bsbs_sign"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_below="@id/iv_bsbs_signin"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="50dp"
                android:text="签到"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_bsbs_class"
                android:src="@drawable/ic_baseline_house_24"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/tv_bsbs_class"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:text="课程"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/iv_bsbs_class"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_bsbs_mine"
                android:src="@drawable/ic_baseline_person_24"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_marginRight="50dp"/>
            <TextView
                android:id="@+id/tv_bsbs_mine"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:text="我的"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_alignParentRight="true"
                android:layout_marginRight="45dp"
                android:layout_below="@id/iv_bsbs_mine"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>