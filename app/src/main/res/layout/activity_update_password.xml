<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitys.UpdatePasswordActivity">

    <include
        layout="@layout/top_status_bar"
       ></include>

    <TextView
        android:id="@+id/tv_up_old_pwd"
        android:layout_width="75dp"
        android:layout_height="34dp"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="140dp"
        android:gravity="right"
        android:text="原密码"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_up_old_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="136dp"
        android:layout_marginLeft="15dp"
        android:ems="10"
        android:singleLine="true"
        android:inputType="textPassword"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/tv_up_old_pwd"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_up_see"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/ic_baseline_visibility_24"
        app:layout_constraintBottom_toBottomOf="@+id/et_up_old_pwd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/et_up_old_pwd" />

    <TextView
        android:id="@+id/tv_up_new_pwd"
        android:layout_width="75dp"
        android:layout_height="34dp"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="52dp"
        android:gravity="right"
        android:text="新密码"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_up_old_pwd" />

    <EditText
        android:id="@+id/et_up_new_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:singleLine="true"
        android:inputType="textPassword"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@id/et_up_old_pwd"
        app:layout_constraintTop_toBottomOf="@+id/et_up_old_pwd" />

    <TextView
        android:id="@+id/tv_up_again"
        android:layout_width="75dp"
        android:layout_height="34dp"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="56dp"
        android:gravity="right"
        android:text="再次输入"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_up_new_pwd" />

    <EditText
        android:id="@+id/et_up_again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:ems="10"
        android:singleLine="true"
        android:inputType="textPassword"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/et_up_new_pwd"
        app:layout_constraintTop_toBottomOf="@+id/et_up_new_pwd" />

    <Button
        android:id="@+id/b_up_update"
        android:layout_width="365dp"
        android:layout_height="79dp"
        android:layout_marginTop="52dp"
        android:background="#03A9F4"
        android:text="修改"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_up_again" />


</androidx.constraintlayout.widget.ConstraintLayout>