<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activitys.MyInfoTeacherActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_mit_title"
            android:text="个人资料"
            android:textSize="40sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="#7E7A7A"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_below="@id/tv_mit_title" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">
        <ImageView
            android:id="@+id/iv_mit_avatar"
            android:src="@drawable/ic_baseline_account_circle_24"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/tv_mit_nametext"
                android:text="姓名  "
                android:textSize="30sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:id="@+id/et_mit_name"
                android:hint="WOLD"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_mit_nametext"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#7E7A7A"
                android:layout_below="@id/et_mit_name" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="50dp">
            <TextView
                android:id="@+id/tv_mit_sextext"
                android:text="性别  "
                android:textSize="30sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:id="@+id/et_mit_sex"
                android:hint="男"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_mit_sextext"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#7E7A7A"
                android:layout_below="@id/et_mit_sex" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="100dp">
            <TextView
                android:id="@+id/tv_mit_phonetext"
                android:text="手机  "
                android:textSize="30sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:id="@+id/et_mit_phone"
                android:hint="157*******123"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_mit_phonetext"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#7E7A7A"
                android:layout_below="@id/et_mit_phone" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="150dp">
            <TextView
                android:id="@+id/tv_mit_teacheridtext"
                android:text="工号  "
                android:textSize="30sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:id="@+id/et_mit_teacherid"
                android:hint="1700000000"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_mit_teacheridtext"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#7E7A7A"
                android:layout_below="@id/et_mit_teacherid" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="200dp">
            <TextView
                android:id="@+id/tv_mit_resetpassword"
                android:text="修改密码  "
                android:textSize="30sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"/>
            <ImageView
                android:id="@+id/iv_mit_resetpassword"
                android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#7E7A7A"
                android:layout_below="@id/iv_mit_resetpassword" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <Button
            android:id="@+id/bt_mit_updateinfo"
            android:text="修改信息"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#3291F8"/>
        <Button
            android:id="@+id/bt_mit_logout"
            android:text="退出登录"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:layout_marginTop="55dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FF2525"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/bottom_status_bar_teacher"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

</LinearLayout>