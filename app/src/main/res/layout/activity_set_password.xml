<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitys.SetPasswordActivity">

    <ImageView
        android:id="@+id/tv_sp_back"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="?attr/actionModeCloseDrawable" />

    <TextView
        android:id="@+id/tv_sp_title"
        android:layout_width="165dp"
        android:layout_height="34dp"
        android:layout_marginTop="152dp"
        android:text="请设置密码"
        android:textColor="#0B0A0A"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.178"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_sp_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="密码长度6-20位"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_sp_title" />

    <EditText
        android:id="@+id/et_sp_input"
        android:layout_width="340dp"
        android:layout_height="67dp"
        android:layout_marginTop="80dp"
        android:ems="10"
        android:hint="请输入密码"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.619"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_sp_message" />

    <Button
        android:id="@+id/b_sp_finish"
        android:layout_width="365dp"
        android:layout_height="79dp"
        android:layout_marginTop="68dp"
        android:background="#03A9F4"
        android:text="验证"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_sp_input" />


</androidx.constraintlayout.widget.ConstraintLayout>